{
    "name": "ayesh/stateless-csrf",
    "description": "Secret-key based state-less CSRF token generator and validator for PHP 7. State-less means you do not have to store the CSRF token in session or database.",
    "type": "library",
    "keywords": [
        "form",
        "middleware",
        "csrf",
        "hash",
        "hmac",
        "security",
        "netsec"
    ],
    "require": {
        "php": "^7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "ayesh/php-timer": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Ayesh\\StatelessCSRF\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ayesh\\StatelessCSRF\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ayesh Karunaratne",
            "email": "ayesh@ayesh.me"
        }
    ]
}
